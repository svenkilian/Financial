{
	"data": {
		"filename": "sp500_long.csv",
		"_comment": "['Close','Volume']",
		"columns": [
			"Close", "Volume"
		],
		"sequence_length": 50,
		"train_test_split": 0.85,
		"normalize": true
	},
	"training": {
		"epochs": 15,
		"batch_size": 64
	},
	"model": {
		"loss": "mse",
		"optimizer": "adam",
		"metrics": ["mae", "mse"],
		"save_dir": "saved_models",
		"layers": [
			{
				"type": "lstm",
				"neurons": 100,
				"input_timesteps": 49,
				"input_dim": 2,
				"return_seq": true
			},
			{
				"type": "dropout",
				"rate": 0.2
			},
			{
				"type": "lstm",
				"neurons": 100,
				"return_seq": true
			},
			{
				"type": "lstm",
				"neurons": 100,
				"dropout": 0.1,
				"return_seq": false
			},
			{
				"type": "dropout",
				"rate": 0.2
			},
			{
				"type": "dense",
				"neurons": 1,
				"activation": "linear"
			}
		]
	}
}
